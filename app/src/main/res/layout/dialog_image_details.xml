<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/ivCose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_close_white"
        android:layout_marginBottom="10dp"
        android:layout_alignEnd="@id/rlImage"/>

    <RelativeLayout
        android:id="@+id/rlImage"
        android:layout_below="@id/ivCose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="250dp"
            android:layout_height="250dp"/>

        <ImageView
            android:id="@+id/ivPlay"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@color/colorWhiteT"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleY="3"
            android:scaleX="3"
            android:src="@drawable/ic_play_gray"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/rlImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/rlImage"
        android:layout_alignEnd="@id/rlImage"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@color/colorWhite">


        <ImageView
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_arrow_down"/>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"/>

    </LinearLayout>

</RelativeLayout>