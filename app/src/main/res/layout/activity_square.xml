<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/root">

    <ImageView
        android:id="@+id/ivCross"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="40dp"
        android:src="@drawable/ic_close_white"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/ivTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/ivCross"
        app:layout_constraintStart_toStartOf="@id/ivCross"
        app:layout_constraintEnd_toEndOf="@id/ivCross"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_delete"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/ivBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ivCross"
        app:layout_constraintStart_toStartOf="@id/ivCross"
        app:layout_constraintEnd_toEndOf="@id/ivCross"
        app:layout_constraintDimensionRatio="1:1"
        android:rotation="180"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_delete"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/ivLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/ivCross"
        app:layout_constraintBottom_toBottomOf="@id/ivCross"
        app:layout_constraintEnd_toStartOf="@id/ivCross"
        app:layout_constraintDimensionRatio="1:1"
        android:rotation="-90"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_delete"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/ivRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/ivCross"
        app:layout_constraintBottom_toBottomOf="@id/ivCross"
        app:layout_constraintStart_toEndOf="@id/ivCross"
        app:layout_constraintDimensionRatio="1:1"
        android:rotation="90"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_delete"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/ivLessSize"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/ic_less"
        app:tint="@color/white"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/ivMoreSize"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/ic_more"
        app:tint="@color/white"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/tvSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ivLessSize"
        app:layout_constraintBottom_toBottomOf="@id/ivLessSize"
        app:layout_constraintStart_toEndOf="@id/ivLessSize"
        app:layout_constraintEnd_toStartOf="@id/ivMoreSize"
        android:text="@string/size"
        android:textSize="16sp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/ivLessDistance"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/ic_less"
        app:tint="@color/white"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/ivMoreDistance"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/ic_more"
        app:tint="@color/white"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ivLessDistance"
        app:layout_constraintBottom_toBottomOf="@id/ivLessDistance"
        app:layout_constraintStart_toEndOf="@id/ivLessDistance"
        app:layout_constraintEnd_toStartOf="@id/ivMoreDistance"
        android:text="@string/distance"
        android:textSize="16sp"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>