<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sergioloc.hologram.Fragments.ListFragment"
    android:background="@color/white">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/root">



        <com.google.android.flexbox.FlexboxLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/control_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:flexWrap="wrap"
            app:alignItems="baseline"
            app:alignContent="flex_start">

            <com.vpaliy.chips_lover.ChipView
                android:id="@+id/chip0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chip_text="Todas"
                app:chip_backgroundColor="@color/white"
                android:clickable="true"
                app:chip_selectedBackgroundColor="@color/red"
                app:chip_selectedTextColor="@color/white"
                app:chipTextColor="@color/black"
                app:chip_elevation="2dp"
                app:chipSelectable="false"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp" />

            <com.vpaliy.chips_lover.ChipView
                android:id="@+id/chip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chip_text="Animales"
                app:chip_backgroundColor="@color/white"
                android:clickable="true"
                app:chip_selectedBackgroundColor="@color/orange"
                app:chip_selectedTextColor="@color/white"
                app:chipTextColor="@color/black"
                app:chip_elevation="2dp"
                app:chipSelectable="false"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp" />


            <com.vpaliy.chips_lover.ChipView
                android:id="@+id/chip2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chip_text="Peliculas"
                app:chip_backgroundColor="@color/white"
                android:clickable="true"
                app:chip_selectedBackgroundColor="@color/blue"
                app:chip_selectedTextColor="@color/white"
                app:chipTextColor="@color/black"
                app:chip_elevation="2dp"
                app:chipSelectable="false"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"/>

            <com.vpaliy.chips_lover.ChipView
                android:id="@+id/chip3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chip_text="Espacio"
                app:chip_backgroundColor="@color/white"
                android:clickable="true"
                app:chip_selectedBackgroundColor="@color/pink"
                app:chip_selectedTextColor="@color/white"
                app:chipTextColor="@color/black"
                app:chip_elevation="2dp"
                app:chipSelectable="false"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"/>

            <com.vpaliy.chips_lover.ChipView
                android:id="@+id/chip4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chip_text="Naturaleza"
                app:chip_backgroundColor="@color/white"
                android:clickable="true"
                app:chip_selectedBackgroundColor="@color/green"
                app:chip_selectedTextColor="@color/white"
                app:chipTextColor="@color/black"
                app:chip_elevation="2dp"
                app:chipSelectable="false"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"/>


            <com.vpaliy.chips_lover.ChipView
                android:id="@+id/chip5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chip_text="Musica"
                app:chip_backgroundColor="@color/white"
                android:clickable="true"
                app:chip_selectedBackgroundColor="@color/cyan"
                app:chip_selectedTextColor="@color/white"
                app:chipTextColor="@color/black"
                app:chip_elevation="2dp"
                app:chipSelectable="false"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"/>

            <com.vpaliy.chips_lover.ChipView
                android:id="@+id/chip6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chip_text="Figuras"
                app:chip_backgroundColor="@color/white"
                android:clickable="true"
                app:chip_selectedBackgroundColor="@color/yellow"
                app:chip_selectedTextColor="@color/white"
                app:chipTextColor="@color/black"
                app:chip_elevation="2dp"
                app:chipSelectable="false"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"/>

            <com.vpaliy.chips_lover.ChipView
                android:id="@+id/chip7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chip_text="Otros"
                app:chip_backgroundColor="@color/white"
                android:clickable="true"
                app:chip_selectedBackgroundColor="@color/purple"
                app:chip_selectedTextColor="@color/white"
                app:chipTextColor="@color/black"
                app:chip_elevation="2dp"
                app:chipSelectable="false"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.flexbox.FlexboxLayout>

        <TextView
            android:id="@+id/black_space"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/control_handle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:background="@color/white"
            android:text="      Caterories"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textoCont"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:text="videos"
            android:gravity="right|center"
            android:paddingRight="10dp" />

        <ImageView
            android:id="@+id/arrowTag"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_action_arrow_down"/>




        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:paddingTop="15dp"
            android:id="@+id/recyclerview"/>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.vpaliy.chips_lover.ChipView
                android:id="@+id/chipUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chip_text="Subir"
                app:chip_backgroundColor="@color/colorPrimary"
                android:clickable="true"
                app:chipTextColor="@color/white"
                app:chip_elevation="2dp"
                app:chipSelectable="false"
                android:visibility="invisible"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"/>

            <com.getbase.floatingactionbutton.FloatingActionsMenu
                android:id="@+id/menu_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                app:fab_labelStyle="@style/Etiquetas"
                fab:fab_addButtonColorNormal="?attr/colorPrimary"
                fab:fab_addButtonSize="normal"
                fab:fab_labelsPosition="left">

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fb_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_colorNormal="?attr/colorAccent"
                    fab:fab_icon="@drawable/ic_action_fav"
                    fab:fab_size="mini" />

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fb_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_colorNormal="?attr/colorAccent"
                    fab:fab_icon="@drawable/ic_action_more"
                    fab:fab_size="mini" />


            </com.getbase.floatingactionbutton.FloatingActionsMenu>

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>
