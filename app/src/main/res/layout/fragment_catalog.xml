<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/chipsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="3dp"
        app:flexWrap="wrap"
        app:alignItems="baseline"
        app:alignContent="flex_start"
        android:visibility="gone">

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:paddingHorizontal="5dp"
            app:chip_text="@string/all"
            app:chip_backgroundColor="@color/white"
            app:chip_selectedBackgroundColor="@color/tag_red"
            app:chip_selectedTextColor="@color/white"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false" />

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:paddingHorizontal="5dp"
            app:chip_text="@string/animals"
            app:chip_backgroundColor="@color/white"
            app:chip_selectedBackgroundColor="@color/tag_orange"
            app:chip_selectedTextColor="@color/white"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false" />


        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:paddingHorizontal="5dp"
            app:chip_text="@string/movies"
            app:chip_backgroundColor="@color/white"
            app:chip_selectedBackgroundColor="@color/tag_blue"
            app:chip_selectedTextColor="@color/white"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false" />

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:paddingHorizontal="5dp"
            app:chip_text="@string/space"
            app:chip_backgroundColor="@color/white"
            app:chip_selectedBackgroundColor="@color/tag_pink"
            app:chip_selectedTextColor="@color/white"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false" />

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:paddingHorizontal="5dp"
            app:chip_text="@string/nature"
            app:chip_backgroundColor="@color/white"
            app:chip_selectedBackgroundColor="@color/tag_green"
            app:chip_selectedTextColor="@color/white"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false" />

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:paddingHorizontal="5dp"
            app:chip_text="@string/music"
            app:chip_backgroundColor="@color/white"
            app:chip_selectedBackgroundColor="@color/tag_cyan"
            app:chip_selectedTextColor="@color/white"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false" />

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:paddingHorizontal="5dp"
            app:chip_text="@string/figures"
            app:chip_backgroundColor="@color/white"
            app:chip_selectedBackgroundColor="@color/tag_yellow"
            app:chip_selectedTextColor="@color/white"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false" />

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:paddingHorizontal="5dp"
            app:chip_text="@string/others"
            app:chip_backgroundColor="@color/white"
            app:chip_selectedBackgroundColor="@color/tag_purple"
            app:chip_selectedTextColor="@color/white"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

    </com.google.android.flexbox.FlexboxLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/chipsLayout"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/tvCategories"
            app:layout_constraintBottom_toBottomOf="@id/tvCategories"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingHorizontal="10dp"
            android:src="@drawable/ic_arrow_bottom"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/tvCategories"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivArrow"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_vertical"
            android:text="@string/categories" />

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/tvCategories"
            app:layout_constraintBottom_toBottomOf="@id/tvCategories"
            android:layout_marginEnd="10dp"
            android:gravity="end|center" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvVideos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/clBar"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ProgressBar
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" />

    <com.vpaliy.chips_lover.ChipView
        android:id="@+id/chipUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/rvVideos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:chip_text="@string/up"
        app:chip_backgroundColor="@color/primary"
        app:chipTextColor="@color/white"
        app:chip_elevation="2dp"
        app:chipSelectable="false"
        android:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>
