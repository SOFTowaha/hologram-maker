<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/chipsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="3dp"
        android:background="@color/colorWhite"
        app:flexWrap="wrap"
        app:alignItems="baseline"
        app:alignContent="flex_start"
        android:visibility="gone">

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chip_text="@string/all"
            app:chip_backgroundColor="@color/colorWhite"
            app:chip_selectedBackgroundColor="@color/red"
            app:chip_selectedTextColor="@color/colorWhite"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp" />

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chip_text="@string/animals"
            app:chip_backgroundColor="@color/colorWhite"
            app:chip_selectedBackgroundColor="@color/orange"
            app:chip_selectedTextColor="@color/colorWhite"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp" />


        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chip_text="@string/movies"
            app:chip_backgroundColor="@color/colorWhite"
            app:chip_selectedBackgroundColor="@color/blue"
            app:chip_selectedTextColor="@color/colorWhite"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"/>

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chip_text="@string/space"
            app:chip_backgroundColor="@color/colorWhite"
            app:chip_selectedBackgroundColor="@color/pink"
            app:chip_selectedTextColor="@color/colorWhite"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"/>

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chip_text="@string/nature"
            app:chip_backgroundColor="@color/colorWhite"
            app:chip_selectedBackgroundColor="@color/green"
            app:chip_selectedTextColor="@color/colorWhite"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"/>

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chip_text="@string/music"
            app:chip_backgroundColor="@color/colorWhite"
            app:chip_selectedBackgroundColor="@color/cyan"
            app:chip_selectedTextColor="@color/colorWhite"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"/>

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chip_text="@string/figures"
            app:chip_backgroundColor="@color/colorWhite"
            app:chip_selectedBackgroundColor="@color/yellow"
            app:chip_selectedTextColor="@color/colorWhite"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"/>

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chip_text="@string/others"
            app:chip_backgroundColor="@color/colorWhite"
            app:chip_selectedBackgroundColor="@color/purple"
            app:chip_selectedTextColor="@color/colorWhite"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

    </com.google.android.flexbox.FlexboxLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/chipsLayout"
        android:elevation="3dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/tvCategories"
            app:layout_constraintBottom_toBottomOf="@id/tvCategories"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingHorizontal="10dp"
            android:src="@drawable/ic_arrow_bottom"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/tvCategories"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivArrow"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:text="@string/categories" />

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/tvCategories"
            app:layout_constraintBottom_toBottomOf="@id/tvCategories"
            android:layout_marginEnd="10dp"
            android:text="@string/one_video"
            android:gravity="end|center" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvVideos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/clBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimary" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible" />

    <com.vpaliy.chips_lover.ChipView
        android:id="@+id/chipUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/rvVideos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:chip_text="@string/up"
        app:chip_backgroundColor="@color/colorPrimary"
        app:chipTextColor="@color/colorWhite"
        app:chip_elevation="2dp"
        app:chipSelectable="false"
        android:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>
