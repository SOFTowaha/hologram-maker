<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorWhite"
        app:flexWrap="wrap"
        app:alignItems="baseline"
        app:alignContent="flex_start">

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chip_text="Todas"
            app:chip_backgroundColor="@color/colorWhite"
            app:chip_selectedBackgroundColor="@color/red"
            app:chip_selectedTextColor="@color/colorWhite"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp" />

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chip_text="Animales"
            app:chip_backgroundColor="@color/colorWhite"
            app:chip_selectedBackgroundColor="@color/orange"
            app:chip_selectedTextColor="@color/colorWhite"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp" />


        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chip_text="Peliculas"
            app:chip_backgroundColor="@color/colorWhite"
            app:chip_selectedBackgroundColor="@color/blue"
            app:chip_selectedTextColor="@color/colorWhite"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"/>

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chip_text="Espacio"
            app:chip_backgroundColor="@color/colorWhite"
            app:chip_selectedBackgroundColor="@color/pink"
            app:chip_selectedTextColor="@color/colorWhite"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"/>

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chip_text="Naturaleza"
            app:chip_backgroundColor="@color/colorWhite"
            app:chip_selectedBackgroundColor="@color/green"
            app:chip_selectedTextColor="@color/colorWhite"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"/>


        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chip_text="Musica"
            app:chip_backgroundColor="@color/colorWhite"
            app:chip_selectedBackgroundColor="@color/cyan"
            app:chip_selectedTextColor="@color/colorWhite"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"/>

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chip_text="Figuras"
            app:chip_backgroundColor="@color/colorWhite"
            app:chip_selectedBackgroundColor="@color/yellow"
            app:chip_selectedTextColor="@color/colorWhite"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"/>

        <com.vpaliy.chips_lover.ChipView
            android:id="@+id/chip7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chip_text="Otros"
            app:chip_backgroundColor="@color/colorWhite"
            app:chip_selectedBackgroundColor="@color/purple"
            app:chip_selectedTextColor="@color/colorWhite"
            app:chipTextColor="@color/black"
            app:chip_elevation="2dp"
            app:chipSelectable="false"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"/>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.flexbox.FlexboxLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/tvCategories"
            app:layout_constraintBottom_toBottomOf="@id/tvCategories"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingHorizontal="10dp"
            android:src="@drawable/ic_arrow_bottom"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/tvCategories"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivArrow"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:text="Caterories"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/tvCategories"
            app:layout_constraintBottom_toBottomOf="@id/tvCategories"
            android:layout_marginEnd="10dp"
            android:textSize="15dp"
            android:text="videos"
            android:gravity="end|center" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/blackSpace"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorWhite"
        android:layout_marginTop="50dp"/>

    <View
        android:id="@+id/toolbarShadow"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:background="@drawable/toolbar_dropshadow"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimary"
        android:id="@+id/recyclerview" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible" />

    <com.vpaliy.chips_lover.ChipView
        android:id="@+id/chipUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginStart="10dp"
        app:chip_text="Subir"
        app:chip_backgroundColor="@color/colorPrimary"
        app:chipTextColor="@color/colorWhite"
        app:chip_elevation="2dp"
        app:chipSelectable="false"
        android:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>
