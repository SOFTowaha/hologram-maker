<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_white"
    android:padding="20dp">

    <ImageView
        android:id="@+id/ivImageLoaded"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <EditText
        android:id="@+id/etImageName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/ivImageLoaded"
        android:layout_alignEnd="@id/ivImageLoaded"
        android:layout_below="@id/ivImageLoaded"
        android:hint="Nombre" />

    <Button
        android:id="@+id/bUploadImage"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etImageName"
        android:layout_alignStart="@id/etImageName"
        android:text="Guardar"/>

    <Button
        android:id="@+id/bCloseDialog"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etImageName"
        android:layout_centerHorizontal="true"
        android:text="Cancelar"
        android:layout_toEndOf="@id/bUploadImage"/>


</RelativeLayout>